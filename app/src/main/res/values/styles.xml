<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="PrimaryButton">
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="background">@drawable/primary_button</item>
        <item name="android:layout_marginBottom">@dimen/margin_16</item>
        <item name="android:backgroundTint">@color/orange</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingStart">@dimen/padding_30</item>
        <item name="android:paddingEnd">@dimen/padding_30</item>
        <item name="android:paddingTop">@dimen/margin_16</item>
        <item name="android:paddingBottom">@dimen/margin_16</item>
    </style>
    <style name="permalink">
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">18dp</item>
    </style>




    <!-- Theme for OnBoardingActivity (applying some transition) -->
    <style name="AppTheme.OnBoarding">
        <item name="android:windowSharedElementsUseOverlay">false</item>
        <item name="android:windowContentTransitions">true</item>

        <item name="android:windowExitTransition">@transition/activity_main_exit</item>
        <item name="android:windowReenterTransition">@transition/activity_main_reenter</item>
    </style>
    <!--Styling TextInputLayout colors-->
    <style name="EditText.Login" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/colorGrey</item>
        <item name="colorControlActivated">@color/colorGrey</item>
    </style>
    <style name="Widget.MaterialComponents.Button.TextButton.OnBoardTextButton"
        parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/orange</item>
    </style>


    <style name="alina_smith">

        <item name="android:textSize">
            24sp
        </item>

        <item name="android:letterSpacing">
            0.01
        </item>

        <item name="android:textColor">
            #12121F
        </item>

    </style>

    <!--
          Font family: Montserrat
          Line height: 20sp
        -->

    <style name="hi_i_m_alin">

        <item name="android:textSize">
            14sp
        </item>

        <item name="android:letterSpacing">
            0.02
        </item>

        <item name="android:textColor">
            #AFAFBD
        </item>

    </style>
</resources>