<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

    </style>

    <style name="FirebaseLoginTheme" parent="FirebaseUI">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/com_facebook_button_icon</item>
    </style>

    <style name="PrimaryButton">
    <item name="android:fontFamily">@font/bold</item>
    <item name="android:textColor">@color/white</item>
    </style>
    <style name="permalink">
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">18dp</item>
    </style>
</resources>